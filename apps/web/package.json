{
  "name": "@kosedge/web",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "pnpm exec next dev",
    "dev:3000": "pnpm exec next dev -p 3000",
    "dev:local": "pnpm exec next dev -p 3000 -H 127.0.0.1",
    "kill:3000": "lsof -ti tcp:3000 | xargs kill -9 2>/dev/null || true",
    "dev:webpack": "pnpm exec next dev --no-turbopack",
    "build": "pnpm exec next build",
    "start": "pnpm exec next start",
    "lint": "pnpm exec next lint",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf .next .turbo",
    "postinstall": "prisma generate",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:studio": "prisma studio",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest --watch",
    "test:pipeline": "python -m pytest tests_pipeline -v",
    "pipeline": "python run_pipeline.py",
    "pipeline:check-env": "python run_pipeline.py --check-env",
    "export:kei-lines": "python scripts/export_kei_lines.py",
    "project:future-lines": "python scripts/project_future_kei_lines.py",
    "debug:projection": "python scripts/debug_projection.py",
    "backtest:kei": "python scripts/backtest_kei_results.py",
    "pull:odds-this-season": "python scripts/pull_odds_this_season.py",
    "check:odds-credits": "python scripts/check_odds_api_credits.py",
    "capture:replay": "python scripts/capture_sportsdata_replay.py",
    "pull:cbb": "python scripts/pull_sportsdata_cbb.py",
    "export:power-ratings": "python scripts/export_power_ratings.py",
    "populate:kei-lines-sample": "node scripts/populate-kei-lines-sample.js",
    "ingest:dratings:historical": "pip install -q -r requirements-dratings-historical.txt && python -m playwright install chromium 2>/dev/null; python scripts/ingest_dratings_historical.py"
  },
  "dependencies": {
    "@kosedge/contracts": "workspace:*",
    "@next/mdx": "^16.1.4",
    "@prisma/adapter-pg": "^7.4.0",
    "@prisma/client": "^7.3.0",
    "@prisma/client-runtime-utils": "7.4.0",
    "bcryptjs": "^2.4.3",
    "gray-matter": "^4.0.3",
    "next": "16.1.3",
    "next-auth": "^5.0.0-beta.25",
    "next-mdx-remote": "^6.0.0",
    "pg": "^8.13.0",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "zod": "^4.3.6",
    "pino": "^9.5.0",
    "pino-pretty": "^13.0.0",
    "@sentry/nextjs": "^10.0.0",
    "ioredis": "^5.4.1",
    "rate-limiter-flexible": "^5.0.3",
    "dompurify": "^3.2.2",
    "isomorphic-dompurify": "^2.12.0"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.18",
    "@tailwindcss/typography": "^0.5.19",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/coverage-v8": "^2.1.8",
    "@vitest/ui": "^2.1.8",
    "eslint": "^9",
    "eslint-config-next": "16.1.3",
    "jsdom": "^25.0.1",
    "postcss": "^8.5.6",
    "prisma": "^7.3.0",
    "tailwindcss": "^4.1.18",
    "typescript": "^5",
    "vitest": "^2.1.8"
  }
}